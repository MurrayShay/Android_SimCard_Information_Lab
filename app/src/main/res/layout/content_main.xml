<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="murrray.shay.siminformationlab.MainActivity"
    tools:showIn="@layout/activity_main">

<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Network Operator Mobile Network Code :"
        android:paddingBottom="@dimen/activity_vertical_margin2"
        android:paddingLeft="@dimen/activity_horizontal_margin2"
        android:paddingRight="@dimen/activity_horizontal_margin2"
        android:paddingTop="@dimen/activity_vertical_margin2"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/NetMncText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:paddingBottom="@dimen/activity_vertical_margin2"
        android:paddingLeft="@dimen/activity_horizontal_margin2"
        android:paddingRight="@dimen/activity_horizontal_margin2"
        android:paddingTop="@dimen/activity_vertical_margin2"
        android:hint="Network Operator Mobile Network Code" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Network Operator Mobile Country Code :"
        android:paddingBottom="@dimen/activity_vertical_margin2"
        android:paddingLeft="@dimen/activity_horizontal_margin2"
        android:paddingRight="@dimen/activity_horizontal_margin2"
        android:paddingTop="@dimen/activity_vertical_margin2"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/NetMccText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:paddingBottom="@dimen/activity_vertical_margin2"
        android:paddingLeft="@dimen/activity_horizontal_margin2"
        android:paddingRight="@dimen/activity_horizontal_margin2"
        android:paddingTop="@dimen/activity_vertical_margin2"
        android:hint="Network Operator Mobile Country  Code" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sim Mobile Network Code :"
        android:paddingBottom="@dimen/activity_vertical_margin2"
        android:paddingLeft="@dimen/activity_horizontal_margin2"
        android:paddingRight="@dimen/activity_horizontal_margin2"
        android:paddingTop="@dimen/activity_vertical_margin2"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/SimMncText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:paddingBottom="@dimen/activity_vertical_margin2"
        android:paddingLeft="@dimen/activity_horizontal_margin2"
        android:paddingRight="@dimen/activity_horizontal_margin2"
        android:paddingTop="@dimen/activity_vertical_margin2"
        android:hint="Sim Mobile Network Code" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sim Mobile Country Code :"
        android:paddingBottom="@dimen/activity_vertical_margin2"
        android:paddingLeft="@dimen/activity_horizontal_margin2"
        android:paddingRight="@dimen/activity_horizontal_margin2"
        android:paddingTop="@dimen/activity_vertical_margin2"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/SimMccText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:paddingBottom="@dimen/activity_vertical_margin2"
        android:paddingLeft="@dimen/activity_horizontal_margin2"
        android:paddingRight="@dimen/activity_horizontal_margin2"
        android:paddingTop="@dimen/activity_vertical_margin2"
        android:hint="Sim Mobile Country  Code" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Network Country Iso:"
        android:paddingBottom="@dimen/activity_vertical_margin2"
        android:paddingLeft="@dimen/activity_horizontal_margin2"
        android:paddingRight="@dimen/activity_horizontal_margin2"
        android:paddingTop="@dimen/activity_vertical_margin2"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/nciText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:paddingBottom="@dimen/activity_vertical_margin2"
        android:paddingLeft="@dimen/activity_horizontal_margin2"
        android:paddingRight="@dimen/activity_horizontal_margin2"
        android:paddingTop="@dimen/activity_vertical_margin2"
        android:hint="Network Country Iso" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sim Country Iso:"
        android:paddingBottom="@dimen/activity_vertical_margin2"
        android:paddingLeft="@dimen/activity_horizontal_margin2"
        android:paddingRight="@dimen/activity_horizontal_margin2"
        android:paddingTop="@dimen/activity_vertical_margin2"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

    <TextView
        android:id="@+id/sciText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:paddingBottom="@dimen/activity_vertical_margin2"
        android:paddingLeft="@dimen/activity_horizontal_margin2"
        android:paddingRight="@dimen/activity_horizontal_margin2"
        android:paddingTop="@dimen/activity_vertical_margin2"
        android:hint="Sim Country Iso" />

    </LinearLayout>
</ScrollView>

</LinearLayout>
